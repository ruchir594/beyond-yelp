block content
    title Your Profile
    #leftframe(style="float:left; width: 100%; background-color:#EB3728; color: #888888;")
        br
        p
            | #{fillers.flr1} #{query.food} #{fillers.flr2} #{query.place}
        form.pure-form(name="findRestaurants", method="post", action="/find/pro")
            label(for="food") Get
            input.pure-input-1-3(type="text", name="food", placeholder="Thai Food; Burger; Ice Cream ... ")
            label(for="place") at
            input.pure-input-1-3(type="text", name="place", placeholder="Hanover, NH; London; Manhatten ...")
            button.pure-button.pure-button-primary(type="submit").fa.fa-search
        br
        br
    #rightframe(style="float:right; width: 0%")
        h3.landing-heading Hey #{user.firstname}, Let people find you
        form.pure-form(name="addRooster", method="post", action="/rooster")
            fieldset.pure-group
                .pure-u-1.pure-u-md-1-3
                  label(for='time') For
                  br
                  select#state.pure-input-1-2(name="time")
                    option Breakfast
                    option Brunch
                    option Lunch
                    option Dinner
                    option Late Night
                button.pure-button.button-xlarge.pure-button-primary(type="submit") Add me into Rooster
        h4.landing-heading #{fillers.flr3}
        hr
        h3.landing-heading Find people to hang out with
        form.pure-form(name="doNetwork", method="post", action="/network")
            fieldset.pure-group
                label(for="place") At
                input.pure-input-1-2(type="text", name="place", placeholder="Hanover, NH; London; Manhatten ...")
                .pure-u-1.pure-u-md-1-3
                  label(for='time') For
                  br
                  select#state.pure-input-1-2(name="time")
                    option Breakfast
                    option Brunch
                    option Lunch
                    option Dinner
                    option Late Night
                button.pure-button.button-xlarge.pure-button-primary(type="submit").fa.fa-search
