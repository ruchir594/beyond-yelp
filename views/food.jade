block content
    title Your Profile
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.page-scroll(itemprop='name', href='/') Foodworked.com
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a.page-scroll(href='/food') Food
                    li
                        a.page-scroll(href='/me') My Profile
                    li
                        a.page-scroll(href='/network') My Network
                    li
                        a.page-scroll(href='#services') Tech
                    li
                        a.page-scroll(href='/logout') Logout
    br
    br
    br

    #leftframe(style="float:left; width: 100%; background-color:#DDDDDD;")
        p
            | #{fillers.flr1} #{query.food} #{fillers.flr2} #{query.place}
        form.pure-form(name="findRestaurants", method="post", action="/find/pro")
            label(for="food") Get
            input.pure-input-1-3(type="text", name="food", placeholder="Thai Food; Burger; Ice Cream ... ")
            label(for="place") at
            input.pure-input-1-3(type="text", name="place", placeholder="Hanover, NH; London; Manhatten ...")
            button.pure-button.pure-button-primary(type="submit").fa.fa-search
    #rightframe(style="float:right; width: 0%")
        h3.landing-heading Hey #{user.firstname}, Let people find you
        form.pure-form(name="addRooster", method="post", action="/rooster")
            fieldset.pure-group
                .pure-u-1.pure-u-md-1-3
                  label(for='time') For
                  br
                  select#state.pure-input-1-2(name="time")
                    option Breakfast
                    option Brunch
                    option Lunch
                    option Dinner
                    option Late Night
                button.pure-button.button-xlarge.pure-button-primary(type="submit") Add me into Rooster
        h4.landing-heading #{fillers.flr3}
        hr
        h3.landing-heading Find people to hang out with
        form.pure-form(name="doNetwork", method="post", action="/network")
            fieldset.pure-group
                label(for="place") At
                input.pure-input-1-2(type="text", name="place", placeholder="Hanover, NH; London; Manhatten ...")
                .pure-u-1.pure-u-md-1-3
                  label(for='time') For
                  br
                  select#state.pure-input-1-2(name="time")
                    option Breakfast
                    option Brunch
                    option Lunch
                    option Dinner
                    option Late Night
                button.pure-button.button-xlarge.pure-button-primary(type="submit").fa.fa-search
