extends layout

block content
    title Your Profile
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.page-scroll(itemprop='name', href='/') Food Networking
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a.page-scroll(href='/home') Home
                    li
                        a.page-scroll(href='/me') My Profile
                    li
                        a.page-scroll(href='/network') My Network
                    li
                        a.page-scroll(href='#services') Tech
                    li
                        a.page-scroll(href='/logout') Logout
    br
    br
    br

    form#formFindRestaurants(name="findRestaurants", method="post", action="/findrestaurants")
        input#inputFood(type="text", placeholder="Thai, Burger, Ice Cream ... ", name="food")
        input#inputPlace(type="text", placeholder="Location, city, locality ...", name="place")
        button#btnSubmit(type="submit") Find!

    p You searched for #{query.food} at #{query.place}

    p #{result}


  script(src='http://code.jquery.com/jquery.js')
