extends layout

block content
    title Your Profile
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand.page-scroll(itemprop='name', href='/') Food Networking
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a.page-scroll(href='/home') Home
                    li
                        a.page-scroll(href='/me') My Profile
                    li
                        a.page-scroll(href='#') My Network
                    li
                        a.page-scroll(href='#services') Tech
                    li
                        a.page-scroll(href='/logout') Logout
    #action.bg-primary
        .container
            .row
                .col-lg-8.col-lg-offset-2.text-center
                    br
                    br
                    h1.landing-heading.section-heading Welcome, #{user.firstname}
                    hr

    .container
        .row
            form.pure-form(name="doNetwork", method="post", action="/network")
                fieldset.pure-group
                    label(for="place") At
                    input.pure-input-1-3(type="text", name="place", placeholder="Hanover, NH; London; Manhatten ...")
                    .pure-u-1.pure-u-md-1-3
                      label(for='time') Time
                      br
                      select#state.pure-input-1-2(name="time")
                        option Breakfast
                        option Brunch
                        option Lunch
                        option Dinner
                        option Late Night
                    button.pure-button.button-xlarge.pure-button-primary(type="submit").fa.fa-search  Go figure
    .bg-light-gray
        .container
            .row
            each f,i in fuser
                .col-sm-4
                    .team-member
                        img.img-circle.img-responsive(src='#{f.profilepic}')
                        a(href='#{f.profilelink}') #{f.name}
                        p #{f.education}, #{f.major}
